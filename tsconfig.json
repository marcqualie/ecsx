{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "composite": true,
    "declaration": true,
    "esModuleInterop": true,
    "importHelpers": true,
    "module": "commonjs",
    "lib": [
      "ES2015"
    ],
    "outDir": "lib",
    "resolveJsonModule": true,
    "rootDir": "src",
    "skipLibCheck": true,
    "strict": true,
    "target": "es2017"
  },
  "include": [
    "src/**/*",
    "src/schema.json"
  ],
  "exclude": [
    "node_modules",
    "node_modules/**/*"
  ]
}
