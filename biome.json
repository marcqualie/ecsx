{
  "$schema": "https://biomejs.dev/schemas/2.1.3/schema.json",
  "vcs": {
    "enabled": true,
    "clientKind": "git",
    "useIgnoreFile": true
  },
  "files": {
    "includes": ["src/**/*", "*.js", "*.json"],
    "ignoreUnknown": false
  },
  "formatter": {
    "enabled": true,
    "indentWidth": 2,
    "indentStyle": "space"
  },
  "linter": {
    "enabled": true,
    "rules": {
      "recommended": true
    }
  },
  "javascript": {
    "formatter": {
      "quoteStyle": "single",
      "semicolons": "asNeeded"
    }
  },
  "assist": {
    "enabled": true,
    "actions": {
      "source": {
        "organizeImports": {
          "level": "on",
          "options": {
            "groups": [
              {
                "type": false,
                "source": [
                  ":URL:",
                  ":NODE:",
                  ":PACKAGE:",
                  ":PACKAGE_WITH_PROTOCOL:"
                ]
              },
              ":BLANK_LINE:",
              { "type": false, "source": [":PATH:", ":ALIAS:"] },
              ":BLANK_LINE:",
              ":TYPE:"
            ]
          }
        }
      }
    }
  }
}
